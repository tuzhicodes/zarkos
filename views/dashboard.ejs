<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Basic Meta -->
    <title>ZarKos Ultimate Dashboard - <%= guild.name %></title>
    <meta name="description" content="ZarKos Ultimate - Advanced Discord Bot with AutoMod, Suggestions, and powerful automation tools. Manage your server with the ultimate bot dashboard.">
    
    <!-- Open Graph / Facebook / Discord -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= process.env.DASHBOARD_URL || 'http://localhost:22280' %>/dashboard/<%= guild.id %>">
    <meta property="og:title" content="ZarKos Ultimate Dashboard">
    <meta property="og:description" content="Ultimate Discord Bot with Advanced AutoMod, Suggestions System, and Powerful Automation. Professional server management made easy.">
    <meta property="og:image" content="<%= botConfig.logoUrl %>">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="<%= process.env.DASHBOARD_URL || 'http://localhost:22280' %>/dashboard/<%= guild.id %>">
    <meta property="twitter:title" content="ZarKos Ultimate Dashboard">
    <meta property="twitter:description" content="Ultimate Discord Bot with Advanced AutoMod, Suggestions System, and Powerful Automation.">
    <meta property="twitter:image" content="<%= botConfig.logoUrl %>">
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#FFC107">
    
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --bg-body: #0a0a0c;
            --bg-sidebar: #0f0f13;
            --bg-header: rgba(15, 15, 19, 0.9);
            --accent-gold: #FFC107;
            --accent-orange: #FF8C00;
            --text-main: #fff;
            --text-muted: #9ca3af;
            --border: 1px solid #1f1f23;
        }
        * { box-sizing: border-box; margin: 0; padding: 0; }
        
        body {
            font-family: 'Outfit', sans-serif;
            background: var(--bg-body);
            color: var(--text-main);
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .main-container {
            display: flex;
            flex: 1;
            overflow: hidden;
        }

        /* SIDEBAR */
        .sidebar {
            width: 260px;
            background: var(--bg-sidebar);
            border-right: var(--border);
            display: flex;
            flex-direction: column;
            padding: 20px;
            z-index: 10;
            position: relative;
            transition: transform 0.3s ease;
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 30px;
            font-weight: 700;
            font-size: 1.2rem;
        }
        .brand img {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            border: 2px solid var(--accent-gold);
        }
        
        .menu-label {
            font-size: 0.75rem;
            color: var(--text-muted);
            text-transform: uppercase;
            margin: 20px 0 10px;
            font-weight: 700;
        }
        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 15px;
            color: var(--text-muted);
            text-decoration: none;
            border-radius: 8px;
            transition: 0.2s;
            margin-bottom: 5px;
        }
        .nav-item:hover, .nav-item.active {
            background: linear-gradient(90deg, rgba(255, 193, 7, 0.1), transparent);
            color: var(--accent-gold);
            border-left: 3px solid var(--accent-gold);
        }
        .nav-item i { width: 20px; text-align: center; }

        /* MOBILE MENU TOGGLE */
        .mobile-menu-btn {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--accent-gold), var(--accent-orange));
            border: none;
            border-radius: 50%;
            color: #000;
            font-size: 1.5rem;
            cursor: pointer;
            z-index: 1000;
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        }

        .main-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            width: 100%;
        }
        
        /* HEADER */
        .top-header {
            height: 70px;
            background: var(--bg-header);
            backdrop-filter: blur(10px);
            border-bottom: var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            flex-shrink: 0;
        }
        
        .server-switcher { position: relative; }
        .current-server {
            display: flex;
            align-items: center;
            gap: 10px;
            background: #1a1a1e;
            border: 1px solid #333;
            padding: 8px 16px;
            border-radius: 8px;
            cursor: pointer;
            min-width: 200px;
        }
        .server-dropdown {
            position: absolute;
            top: 110%;
            right: 0;
            left: 0;
            background: #1a1a1e;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 5px;
            display: none;
            max-height: 300px;
            overflow-y: auto;
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
            z-index: 100;
        }
        .server-switcher:hover .server-dropdown { display: block; }
        
        .switch-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 0.9rem;
        }
        .switch-item:hover { background: #25252b; }
        .switch-item img { width: 24px; height: 24px; border-radius: 50%; }

        /* CONTENT */
        .content {
            padding: 30px;
            overflow-y: auto;
            flex: 1;
        }

        .stat-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .card {
            background: #151518;
            border: 1px solid #222;
            padding: 20px;
            border-radius: 12px;
        }
        .card h3 {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 5px;
        }
        .card .val {
            font-size: 1.8rem;
            font-weight: 700;
            color: #fff;
        }

        /* ANALYTICS CARDS */
        .analytics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .analytics-card {
            background: linear-gradient(135deg, #1a1a1e 0%, #0f0f13 100%);
            border: 2px solid #222;
            border-radius: 16px;
            padding: 30px;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: 0.3s;
        }

        .analytics-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-gold), var(--accent-orange));
        }

        .analytics-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(255, 193, 7, 0.2);
        }

        .analytics-card .icon {
            font-size: 3rem;
            margin-bottom: 15px;
            background: linear-gradient(135deg, var(--accent-gold), var(--accent-orange));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .analytics-card .value {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 10px;
            color: #fff;
        }

        .analytics-card .label {
            font-size: 1rem;
            color: var(--text-muted);
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
        }

        /* FOOTER */
        .dashboard-footer {
            background: var(--bg-sidebar);
            border-top: var(--border);
            padding: 25px 30px;
            text-align: center;
            margin-top: auto;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-copyright {
            color: var(--text-muted);
            font-size: 0.95rem;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .footer-copyright strong {
            background: linear-gradient(135deg, var(--accent-gold), var(--accent-orange));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
        }

        .footer-links {
            display: flex;
            gap: 25px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .footer-links a {
            color: var(--accent-gold);
            text-decoration: none;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s ease;
            padding: 8px 15px;
            border-radius: 8px;
            background: rgba(255, 193, 7, 0.05);
        }

        .footer-links a:hover {
            color: var(--accent-orange);
            transform: translateY(-3px);
            background: rgba(255, 193, 7, 0.1);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.2);
        }
        .footer-links a i {
            font-size: 1.1rem;
        }

        /* ========== RESPONSIVE ========== */
        
        /* Tablets (768px - 1024px) */
        @media (max-width: 1024px) {
            .analytics-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            }
            
            .analytics-card {
                padding: 20px;
            }
            
            .analytics-card .icon {
                font-size: 2.5rem;
            }
            
            .analytics-card .value {
                font-size: 2.5rem;
            }
        }

        /* Mobile & Tablets (max-width: 768px) */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .main-container {
                flex-direction: column;
            }

            .sidebar {
                position: fixed;
                left: 0;
                top: 0;
                height: 100vh;
                transform: translateX(-100%);
                z-index: 999;
                box-shadow: 5px 0 15px rgba(0,0,0,0.5);
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .mobile-menu-btn {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .top-header {
                padding: 0 15px;
                height: 60px;
            }

            .top-header h2 {
                font-size: 1rem;
            }

            .current-server {
                min-width: 150px;
                padding: 6px 12px;
            }

            .current-server span {
                max-width: 80px;
            }

            .content {
                padding: 15px;
            }

            .analytics-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .analytics-card {
                padding: 20px 15px;
            }

            .analytics-card .icon {
                font-size: 2rem;
            }

            .analytics-card .value {
                font-size: 2rem;
            }

            .analytics-card .label {
                font-size: 0.85rem;
            }

            .stat-grid {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                gap: 15px;
            }

            .card {
                padding: 15px;
            }

            .card .val {
                font-size: 1.5rem;
            }

            .footer-links {
                flex-direction: column;
                gap: 10px;
            }

            .footer-links a {
                justify-content: center;
            }

            .dashboard-footer {
                padding: 15px;
            }
        }

        /* Small Mobile (max-width: 480px) */
        @media (max-width: 480px) {
            .analytics-grid {
                grid-template-columns: 1fr;
            }

            .stat-grid {
                grid-template-columns: 1fr;
            }

            .current-server {
                min-width: 120px;
            }

            .top-header h2 {
                font-size: 0.9rem;
            }

            h1 {
                font-size: 1.5rem;
            }
        }

        /* Overlay for mobile menu */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 998;
        }

        .sidebar-overlay.active {
            display: block;
        }

    </style>
</head>
<body>

    <div class="main-container">
        <!-- Sidebar Overlay for Mobile -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <aside class="sidebar" id="sidebar">
            <div class="brand">
                <img src="<%= botConfig.logoUrl %>" alt="Logo">
                <span><%= botConfig.name %></span>
            </div>

            <div class="menu-label">Menu</div>
            <a href="/dashboard/<%= guild.id %>" class="nav-item active">
                <i class="fas fa-home"></i> Overview
            </a>
            <a href="/dashboard/<%= guild.id %>/aichat" class="nav-item">
                <i class="fas fa-robot"></i> AI Chat
            </a>

            <a href="/dashboard/<%= guild.id %>/suggestions" class="nav-item">
                <i class="fas fa-lightbulb"></i> Suggestions
            </a>
            
            <div class="menu-label">Links</div>
            <a href="<%= botConfig.privacyUrl %>" target="_blank" class="nav-item">
                <i class="fas fa-shield-alt"></i> Privacy Policy
            </a>
            <a href="<%= botConfig.termsUrl %>" target="_blank" class="nav-item">
                <i class="fas fa-file-contract"></i> Terms of Service
            </a>
            <a href="<%= botConfig.supportUrl %>" target="_blank" class="nav-item">
                <i class="fas fa-headset"></i> Support
            </a>
            
            <div style="margin-top: auto;">
                <a href="/dashboard" class="nav-item"><i class="fas fa-arrow-left"></i> Change Server</a>
                <a href="/auth/logout" class="nav-item" style="color: #ef4444;"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </aside>

        <div class="main-wrapper">
            <header class="top-header">
                <h2 style="font-size: 1.2rem;">Server Overview</h2>
                
                <div class="server-switcher">
                    <div class="current-server">
                        <% if(guild.icon) { %>
                            <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" style="width:24px;height:24px;border-radius:50%;">
                        <% } else { %>
                            <div style="width:24px;height:24px;background:#333;border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:0.8rem;"><%= guild.name[0] %></div>
                        <% } %>
                        <span style="flex:1; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; max-width:120px;"><%= guild.name %></span>
                        <i class="fas fa-chevron-down" style="font-size:0.8rem;"></i>
                    </div>
                    
                    <div class="server-dropdown" id="switcherDropdown">
                        <div style="padding:10px;text-align:center;color:#666;font-size:0.8rem;">Loading servers...</div>
                    </div>
                </div>
            </header>

            <div class="content">
                <h1 style="margin-bottom: 10px;">Welcome to Dashboard</h1>
                <p style="color: var(--text-muted); margin-bottom: 30px;">Live statistics and analytics</p>
                
                <!-- Analytics Cards -->
                <div class="analytics-grid">
                    <div class="analytics-card">
                        <div class="icon"><i class="fas fa-server"></i></div>
                        <div class="value" id="totalServers">-</div>
                        <div class="label">Total Servers</div>
                    </div>
                    
                    <div class="analytics-card">
                        <div class="icon"><i class="fas fa-users"></i></div>
                        <div class="value" id="totalUsers">-</div>
                        <div class="label">Total Users</div>
                    </div>
                    
                    <div class="analytics-card">
                        <div class="icon"><i class="fas fa-sign-in-alt"></i></div>
                        <div class="value" id="dailyLogins">-</div>
                        <div class="label">Daily Logins</div>
                    </div>
                    
                    <div class="analytics-card">
                        <div class="icon"><i class="fas fa-user-plus"></i></div>
                        <div class="value" id="newUsers">-</div>
                        <div class="label">New Users Today</div>
                    </div>
                    
                    <div class="analytics-card">
                        <div class="icon"><i class="fas fa-redo"></i></div>
                        <div class="value" id="relogins">-</div>
                        <div class="label">Re-logins Today</div>
                    </div>
                </div>

                <!-- Server Stats -->
                <h2 style="margin-bottom: 15px; color: var(--accent-gold);">Server Information</h2>
                <div class="stat-grid">
                    <div class="card" style="border-top: 3px solid #FFC107;">
                        <h3>Member Count</h3>
                        <div class="val"><%= guild.memberCount || 'N/A' %></div>
                    </div>
                    <div class="card" style="border-top: 3px solid #FF8C00;">
                        <h3>Your Role</h3>
                        <div class="val"><%= guild.ownerId === user.id ? 'Owner' : 'Admin' %></div>
                    </div>
                    <div class="card" style="border-top: 3px solid #5865F2;">
                        <h3>Server ID</h3>
                        <div class="val" style="font-size:1rem;"><%= guild.id %></div>
                    </div>
                    <div class="card" style="border-top: 3px solid #57F287;">
                        <h3>Bot Status</h3>
                        <div class="val" style="font-size:1.2rem; color:#57F287;">ðŸŸ¢ Online</div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card">
                    <h2 style="margin-bottom:15px;">Quick Actions</h2>
                    <div style="display:flex;gap:10px;flex-wrap:wrap;">
                        <a href="/dashboard/<%= guild.id %>/aichat" style="background:linear-gradient(135deg,#FFD700,#FF8C00);color:#000;padding:12px 20px;border-radius:8px;text-decoration:none;font-weight:700;">
                            Configure AI Chat
                        </a>
                        <a href="/dashboard/<%= guild.id %>/suggestions" style="background:linear-gradient(135deg,#FFD700,#FF8C00);color:#000;padding:12px 20px;border-radius:8px;text-decoration:none;font-weight:700;">
                            Configure Suggestions
                        </a>
                        <a href="<%= botConfig.supportUrl %>" target="_blank" style="background:#333;color:#fff;padding:12px 20px;border-radius:8px;text-decoration:none;font-weight:700;">
                            Get Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" id="mobileMenuBtn">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Footer -->
    <footer class="dashboard-footer">
        <div class="footer-content">
            <div class="footer-copyright">
                Copyright Â© by <strong>ZarKos Ultimate</strong>
            </div>
            <div class="footer-links">
                <a href="<%= botConfig.supportUrl %>" target="_blank">
                    <i class="fab fa-discord"></i> Support Server
                </a>
                <a href="https://youtube.com/@TuZhiCodes" target="_blank">
                    <i class="fab fa-youtube"></i> YouTube
                </a>
            </div>
        </div>
    </footer>

    <script>
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const sidebar = document.getElementById('sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        if (mobileMenuBtn && sidebar && sidebarOverlay) {
            mobileMenuBtn.addEventListener('click', () => {
                sidebar.classList.toggle('active');
                sidebarOverlay.classList.toggle('active');
            });

            sidebarOverlay.addEventListener('click', () => {
                sidebar.classList.remove('active');
                sidebarOverlay.classList.remove('active');
            });
        }

        // Load analytics data
        async function loadAnalytics() {
            try {
                const res = await fetch('/api/analytics');
                const data = await res.json();
                
                document.getElementById('totalServers').textContent = data.totalServers.toLocaleString();
                document.getElementById('totalUsers').textContent = data.totalUsers.toLocaleString();
                document.getElementById('dailyLogins').textContent = data.dailyLogins.toLocaleString();
                document.getElementById('newUsers').textContent = data.newUsers.toLocaleString();
                document.getElementById('relogins').textContent = data.relogins.toLocaleString();
            } catch (error) {
                console.error('Error loading analytics:', error);
            }
        }

        // Populate Server Switcher
        fetch('/api/guilds').then(r => r.json()).then(data => {
            const dropdown = document.getElementById('switcherDropdown');
            dropdown.innerHTML = '';
            
            data.guilds.forEach(g => {
                if(g.botInGuild) {
                    const item = document.createElement('a');
                    item.href = `/dashboard/${g.id}`;
                    item.className = 'switch-item';
                    item.innerHTML = `
                        ${g.icon ? `<img src="${g.icon}">` : `<div style="width:24px;height:24px;background:#333;border-radius:50%;display:flex;align-items:center;justify-content:center;">${g.name[0]}</div>`}
                        <span style="white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">${g.name}</span>
                    `;
                    dropdown.appendChild(item);
                }
            });
            
            const viewAll = document.createElement('a');
            viewAll.href = '/dashboard';
            viewAll.className = 'switch-item';
            viewAll.style.justifyContent = 'center';
            viewAll.style.color = '#FFC107';
            viewAll.innerHTML = '<i class="fas fa-th" style="margin-right:8px;"></i> View All Servers';
            dropdown.appendChild(viewAll);
        }).catch(err => {
            console.error('Error loading servers:', err);
            document.getElementById('switcherDropdown').innerHTML = '<div style="padding:10px;color:#ef4444;font-size:0.8rem;">Error loading servers</div>';
        });

        // Load analytics on page load
        loadAnalytics();
        
        // Auto-refresh analytics every 30 seconds
        setInterval(loadAnalytics, 30000);
    </script>
</body>
</html>